{
  "name": "@translator-app/backend",
  "version": "2.0.0",
  "description": "Clean Architecture Translator API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec \"node --env-file=.env --import tsx src/index.ts\"",
    "dev:tsx": "tsx watch src/index.ts",
    "build": "tsc",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx seed.ts",
    "db:studio": "drizzle-kit studio",
    "start": "node --import tsx src/index.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "postgres": "^3.4.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
